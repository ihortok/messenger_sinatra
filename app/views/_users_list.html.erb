<ul class="users-list">
  <% @users&.each do |user| %>
    <li>
      <a href="/chats/<%= user.nickname %>">
        <img src="/images/user.png">
        <div class="user-info">
          <span><%= user.nickname %></span>
          <% unread_messages_count = unread_messages_count_form(user) %>
          <% if unread_messages_count.positive? %></span>
            <span><%= unread_messages_count %></span>
          <% end %>
        </div>
      </a>
    </li>
  <% end %>
</ul>
